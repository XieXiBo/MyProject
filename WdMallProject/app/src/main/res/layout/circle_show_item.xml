<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/goods_shape">

    <RelativeLayout
        android:id="@+id/circle_RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/circle_show_ion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/circle_show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/circle_show_ion"
            android:text="哈哈哈" />

        <TextView
            android:id="@+id/circle_show_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="2019-09-09" />
    </RelativeLayout>

    <TextView
        android:id="@+id/circle_show_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circle_RelativeLayout1"
        android:layout_margin="10dp"
        android:text="哈哈萨克还是就回家看电视剧看电视剧放得开会放大看电视的是否健康很多事较好的" />

    <ImageView
        android:id="@+id/circle_show_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/circle_show_content"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/circle_show_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/circle_show_num"
        android:layout_below="@id/circle_show_img"
        android:src="@mipmap/common_btn_prise1" />

    <TextView
        android:id="@+id/circle_show_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circle_show_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:text="123" />
</RelativeLayout>
