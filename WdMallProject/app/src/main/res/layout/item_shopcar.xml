<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="5dp">

    <CheckBox
        android:id="@+id/check_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <android.support.v7.widget.CardView
        android:layout_toRightOf="@id/check_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFF"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
              >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_item"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:placeholderImage="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/title_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_item"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/img_item"
                    android:lines="2"
                    android:text="按实际和电视剧看的"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/price_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_item"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/img_item"
                    android:text="30"
                    android:textColor="#f00" />

                <com.bwie.mall.wiget.GroupLayout

                    android:id="@+id/group_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_item"
                    android:layout_alignParentRight="true"></com.bwie.mall.wiget.GroupLayout>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
