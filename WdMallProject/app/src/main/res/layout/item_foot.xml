<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFF"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@mipmap/wallet_group" />

            <TextView
                android:id="@+id/title_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_foot"
                android:lines="2"
                android:text="我说这里是标题" />

            <RelativeLayout
                android:padding="5dp"
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_foot">
                <TextView
                    android:id="@+id/price_foot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥300"
                    android:textColor="#f00" />

                <TextView
                    android:id="@+id/num_foot"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100" />
            </RelativeLayout>

            <TextView
                android:layout_below="@id/r1"
                android:id="@+id/time_foot"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-03-29" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
